@page
@model ResetPasswordConfirmationModel

<div class="row">
    <div class="col-md-12">
        <div class="auth-page-content">
            <div class="container">
                <!-- end row -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="card-header text-center mt-4">
                                <img src="/images/logo-medium.png" alt="" height="auto">
                            </div>
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Reset password confirmation</h5>
                                    <p>
                                        Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
